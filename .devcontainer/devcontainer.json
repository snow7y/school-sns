{
  "name": "School SNS App Development",
  "dockerComposeFile": ["./docker-compose.yml"],
  "service": "app-dev",
  "workspaceFolder": "/workspace",
  "remoteUser": "node",
  "mounts": [
    {
      "type": "volume",
      "source": "global-pnpm-store",
      "target": "${containerWorkspaceFolder}/.pnpm-store"
    }
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "editor.renderWhitespace": "all"
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "streetsidesoftware.code-spell-checker",
        "prisma.prisma"
      ]
    }
  },
  "postAttachCommand": "sudo chown -R node:node /workspace /workspace/.pnpm-store && pnpm install",
  "forwardPorts": [3000, 3157, 51212]
}
